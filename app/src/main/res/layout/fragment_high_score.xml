<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stanislavcavajda.memoryblitz.Fragments.HighScoreFragment"
    android:background="#FFFFFF"
    android:id="@+id/high_score_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="HALL OF FAME"
            android:textColor="#9A9A9A"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="bottom|center_horizontal"
            android:text="3x3"
            android:textColor="#9A9A9A"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/threexthree_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="0"
            android:textColor="#9A9A9A"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="bottom|center_horizontal"
            android:text="2x3"
            android:textColor="#9A9A9A"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/twoxthree_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="0"
            android:textColor="#9A9A9A"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="bottom|center_horizontal"
            android:text="2x2"
            android:textColor="#9A9A9A"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/twoxtwo_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="0"
            android:textColor="#9A9A9A"
            android:textSize="35dp" />

        <Button
            android:id="@+id/highscore_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="0.8"
            android:background="#ff6829"
            android:text="OK"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </LinearLayout>

</FrameLayout>
